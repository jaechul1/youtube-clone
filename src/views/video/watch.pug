extends ../base

block content
    div#videoContainer
        video(src=`/${video.fileUrl}`, data-id=video._id)
        div#videoControls
            div.timelineContainer 
                input(type="range", step="1", value="0", min="0")#timeline
            button#play
                i.fas.fa-play
            button#mute
                i.fas.fa-volume-up
            input(type="range", step="0.01", value="0.5", min="0", max="1")#volume
            div.timeContainer 
                span#currentTime 0:00
                span  / 
                span#totalTime 0:00
            button#fullscreen 
                i.fas.fa-expand

