extends ../base

block content
    img(src=`/${loggedInUser.avatarUrl}`, width="100", height="100")
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(name="avatar", type="file", id="avatar", accept=".png, .jpg, .jpeg")
        input(name="name", placeholder="Name", value=loggedInUser.name, required)
        input(name="email", placeholder="Email", type="email", value=loggedInUser.email, required)
        input(name="location" placeholder="Location", value=loggedInUser.location)
        input(value="Update Profile", type='submit')
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password