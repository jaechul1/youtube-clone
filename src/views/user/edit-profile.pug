extends ../base

block content
    div.edit-profile__avatarDiv
        if loggedInUser.socialOnly
            img(src=loggedInUser.avatarUrl, width="100", height="100")
        else 
            img(src=`${loggedInUser.avatarUrl}`, width="100", height="100")
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="edit-avatar") Avatar
        input(name="avatar", type="file", id="edit-avatar", accept=".png, .jpg, .jpeg")
        label(for="edit-name") Name
        input(name="name", placeholder="Name", id="edit-name", value=loggedInUser.name, required)
        label(for="edit-email") Email
        input(name="email", placeholder="Email", id="edit-email", type="email", value=loggedInUser.email, required)
        label(for="edit-location") Location 
        input(name="location" placeholder="Location", id="edit-location", value=loggedInUser.location)
        input(value="Update Profile", type='submit')
        if !loggedInUser.socialOnly
            hr
            div.form__additional
                a(href="change-password") Change Password